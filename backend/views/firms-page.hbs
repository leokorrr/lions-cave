<div class="row">
    <div class="table-layout__title">
        <h2>Firms</h2>
        <button class="btn btn-primary" data-toggle="modal" data-target="#firmModal">Add</button>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Title</th>
                <th scope="col">Date posted</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each firms}}
                <tr>
                    <th scope="row">{{incremented @index}}</th>
                    <td>{{firm_title}}</td>
                    <td>{{firm_date}}</td>
                    <td>
                        <form action="/delete-firm" method="POST">
                            <div class="form-group sr-only">
                                <label for="projectDescription">ID</label>
                                <input type="text" class="form-control"  name="projectId" placeholder="Enter project title" value="{{_id}}">
                            </div>
                            <button class="btn btn-danger" type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
        <div class="modal fade" id="firmModal" tabindex="-1" role="dialog" aria-labelledby="firmModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header project-table__modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">New firm</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form action="/firms" method="POST">
                            <div class="form-group">
                                <label for="firmTitle">Title</label>
                                <input type="text" class="form-control" id="firmTitle" name="firmTitle" placeholder="Enter firm title">
                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
        </div>
</div>